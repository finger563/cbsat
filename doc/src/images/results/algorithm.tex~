\documentclass{standalone}
\usepackage{varwidth}
\usepackage{algorithm} %ctan.org\pkg\algorithms
\usepackage{algpseudocode}
\begin{document}
\begin{varwidth}{\linewidth}
\par\noindent
 \begin{algorithmic}[1]
 \Procedure{Euclid}{$a,b$}
 \State $r\gets a\bmod b$
 \While{$r\not=0$}
 \State $a\gets b$
 \State $b\gets r$
 \State $r\gets a\bmod b$
 \EndWhile
 \State \textbf{return} $b$
 \EndProcedure
 \end{algorithmic}
\end{varwidth}
\end{document}
